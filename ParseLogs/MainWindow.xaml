<Window x:Class="ParseLogs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParseLogs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
     <Window.Resources>
        <CollectionViewSource Source="{Binding Source={x:Static Application.Current}, Path=Files}" x:Key="FilesDataView"/>
        </Window.Resources>
        <!--        <Window.DataContext ></Window.DataContext>-->
    <!-- </Window.Resources> -->
    <!--    <Window.DataContext><Binding Source="{DynamicResource}"></Binding></Window.DataContext>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
           <Button Grid.Row="0" Content="Search" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" Click="Button_Click"/>
        <ListBox Name="FilesListView" Grid.Row="1" ItemsSource="{Binding Source={StaticResource FilesDataView}}"><!-- ItemTemplate="{StaticResource FileItemTemplate}"> -->
            <!-- ItemsSource="{Binding Source={StaticResource FilesDataView}}" -->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=FullName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
            </ListBox>
    </Grid>
</Window>
